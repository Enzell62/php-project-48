#!/usr/bin/php
<?php

require_once __DIR__ . "/../vendor/autoload.php";
use function Differ\genDiff;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]

DOC;

$params = array(
    // 'argv'=>[4341, 231],
    // 'help'=>true,
    'version'=>'1.0'
);

$inputData = Docopt::handle($doc, $params);

try {
  $result = genDiff($inputData->args['<firstFile>'], $inputData->args['<secondFile>'], $inputData->args['--format']);
} catch (\InvalidArgumentException $e) {
  fwrite(STDERR, $e->getMessage());
  exit(1);
}

print_r($result);
exit(0);
